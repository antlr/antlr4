TestType() ::= "Lexer"

Options ::= [
	"ShowDFA": true
]

Grammar ::= [
	"L": {<grammar("L")>}
]

Input() ::= "enum abc enum"

Output() ::= <<
[@0,0:3='enum',\<1>,1:0]
[@1,5:7='abc',\<2>,1:5]
[@2,9:12='enum',\<1>,1:9]
[@3,13:12='\<EOF>',\<-1>,1:13]
<! no edges in DFA for enum/id. all paths lead to pred. !>
s0-' '->:s3=>3<\n>
>>

Errors() ::= ""

grammar(grammarName) ::= <<
lexer grammar <grammarName>;
ENUM : [a-z]+  { <TextEquals("enum")> }? ;
ID : [a-z]+  ;
WS : (' '|'\n') -> skip;
>>
